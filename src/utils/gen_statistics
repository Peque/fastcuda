SYNTHESIS_REPORT_DIR=../../doc/synthesis_reports

cd $SYNTHESIS_REPORT_DIR
file_list=$(ls -1)

echo "N_PORTS:\
BROADCAST_ENABLED:\
TARGET_DEVICE:\
DESIGN_GOAL:\
DESIGN_STRATEGY:\
GLOBAL_OPTIMIZATION:\
SLICE_LUTS:\
BLOCK_RAM:\
MIATBC:\
MORTAC"

for f in *; do

	# N_PORTS
	echo -n $(echo $f | grep -o "\([0-9\.]\)\+" | head -n 1):

	# BROADCAST_ENABLED
	echo -n :

	# TARGET_DEVICE
	echo -n :

	# DESIGN_GOAL
	echo -n :

	# DESIGN_STRATEGY
	echo -n :

	# GLOBAL_OPTIMIZATION
	echo -n :

	# SLICE_LUTS
	echo -n $(grep -e "Number of Slice LUTs" $f | grep -o "[0-9\.]\+" | head -n 1):

	# BLOCK_RAM
	echo -n $(grep -e "Number of Block RAM/FIFO" $f | grep -o "[0-9\.]\+" | head -n 1):

	# MIATBC
	echo -n $(grep -e "Minimum input arrival time before clock" $f | grep -o "[0-9\.]\+" | head -n 1):

	# MORTAC
	echo -n $(grep -e "Maximum output required time after clock" $f | grep -o "[0-9\.]\+" | head -n 1)

	echo ""

done

